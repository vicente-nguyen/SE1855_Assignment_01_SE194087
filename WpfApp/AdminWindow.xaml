<Window x:Class="WpfApp.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="Admin Dashboard" Height="450" Width="800"
        Background="#F8F9FA"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid>
        <Border Margin="40" Padding="24" CornerRadius="12"
                Background="White" BorderBrush="#E0E0E0" BorderThickness="1" >
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
                <TextBlock Text="Admin Dashboard"
                           FontSize="20" FontWeight="Bold"
                           Foreground="#0D47A1" TextAlignment="Center"
                           Margin="0,0,0,20"/>

                <Button x:Name="Btn_CustomerMN" Content="Manage Customers"
                        Height="36" Margin="0,6" Background="#64B5F6" Foreground="White"
                        BorderThickness="0" FontWeight="SemiBold" Cursor="Hand"
                        Click="Btn_CustomerMN_Click"/>

                <Button x:Name="Btn_ProductMN" Content="Manage Products"
                        Height="36" Margin="0,6" Background="#64B5F6" Foreground="White"
                        BorderThickness="0" FontWeight="SemiBold" Cursor="Hand"
                        Click="Btn_ProductMN_Click"/>

                <Button x:Name="Btn_OrderMN" Content="Create and View Orders"
                        Height="36" Margin="0,6" Background="#64B5F6" Foreground="White"
                        BorderThickness="0" FontWeight="SemiBold" Cursor="Hand"
                        Click="Btn_OrderMN_Click"/>

                <Button x:Name="Btn_ReportMN" Content="Reports"
                        Height="36" Margin="0,6" Background="#64B5F6" Foreground="White"
                        BorderThickness="0" FontWeight="SemiBold" Cursor="Hand"
                        Click="Btn_ReportMN_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
